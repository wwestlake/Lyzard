<Window x:Class="Lyzard.IDE.LyzardSplash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lyzard.IDE"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Width="600"
        Height="400"
        x:ClassModifier="internal"
        Title="LyzardSplash">
    <StackPanel>
        <Image Source="/Resources/Images/LyzardSplash.png" />
        <Grid>
            <controls:MetroProgressBar Foreground="LightBlue" Background="Gray"  Height="25" x:Name="ProgressBar" />
            <TextBlock FontSize="18" FontWeight="Bold" Foreground="Black" x:Name="percentage" HorizontalAlignment="Center" />
        </Grid>
    </StackPanel>
</Window>
