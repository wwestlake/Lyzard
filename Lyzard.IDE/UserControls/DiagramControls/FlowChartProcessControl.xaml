<UserControl x:Class="Lyzard.IDE.UserControls.DiagramControls.FlowChartProcessControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lyzard.IDE.UserControls.DiagramControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ContentControl x:Name="Content" />
        <TextBox Style="{StaticResource FlowChartTextBox}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="Transparent" Foreground="Black" Text="{Binding Name}" />
    </Grid>
</UserControl>
